#!/bin/bash

GNOME_SETTINGS_DAEMON_PLUGINS_COLOR=org.gnome.settings-daemon.plugins.color.gschema.xml
SOURCE_DIR=/usr/share/gooroom-artwork-gnome-flashback
TARGET_DIR=/usr/share/glib-2.0/schemas

if [ -e $SOURCE_DIR/$GNOME_SETTINGS_DAEMON_PLUGINS_COLOR ]; then
   cp $SOURCE_DIR/$GNOME_SETTINGS_DAEMON_PLUGINS_COLOR $TARGET_DIR

   glib-compile-schemas $TARGET_DIR
fi

